@model RapidApiDayHotel.Models.SearchHotelViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <h2>Otel Arama</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="HotelList" method="get">
        <div class="form-group">
            <label for="location">Lokasyon Adı:</label>
            <input type="text" class="form-control" id="location" name="location" placeholder="Örn: London" value="@Model?.Location" required />
        </div>
        <div class="form-group">
            <label for="arrivalDate">Giriş Tarihi:</label>
            <input type="date" class="form-control" id="arrivalDate" name="arrivalDate" value="@Model?.ArrivalDate?.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="form-group">
            <label for="departureDate">Çıkış Tarihi:</label>
            <input type="date" class="form-control" id="departureDate" name="departureDate" value="@Model?.DepartureDate?.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="form-group">
            <label for="adults">Yetişkin Sayısı:</label>
            <input type="number" class="form-control" id="adults" name="adults" min="1" value="@(Model?.Adults ?? 2)" required />
        </div>
        <div class="form-group">
            <label for="roomQty">Oda Sayısı:</label>
            <input type="number" class="form-control" id="roomQty" name="roomQty" min="1" value="@(Model?.RoomQty ?? 1)" required />
        </div>
        <button type="submit" class="btn btn-primary">Ara</button>
    </form>
</div>